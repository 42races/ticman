<div class="section">
  <h4> Login </h4>
  <div class="row">
    <div class="col s4">
      <%= form_tag sessions_path, method: :post do %>

        <div class="input-field">
          <%= email_field_tag :email, '', name: 'session[email]', id: 'email' %>
          <label for="emial"> Email </label>
        </div>

        <div class="input-field">
          <%= password_field_tag :password, '', name: 'session[password]', class: 'validate', id: 'password' %>
          <label for='password'> Password</label>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action"> Login</button>
      <% end %>
    </div>
  </div>
</div>
